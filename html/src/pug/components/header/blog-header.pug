// #### HEADER ####
include side-nav/multi-mobile.pug
header.app-bar.header#header
  .container
    #menu_blank &nbsp;
    .header-content
      nav.nav-menu
        |
        |
        button.btn-icon.waves-effect.sidenav-trigger.hamburger.hamburger--spin.show-md-down(
          id="mobile_menu"
          type="button"
          data-target="slide_menu"
        )
          span.hamburger-box
            span.bar.hamburger-inner
        .logo
          |
          |
          a(href=link.starter.home)
            include ../logo.pug
            +logo('landscape')
          |
          |
        .scrollactive-nav.show-lg-up.multi-menu
          include top-nav/multi-level-click
        .hidden-xs-down
          include ./top-nav/search-field
          +search-field(true)
        |
        |
        span.spacer.vertical-divider.show-lg-up
        |
        |
        include ./top-nav/settings
    .hidden-sm-up
      include ./top-nav/search-field
      +search-field()
// #### END HEADER ####