include ../data/sample-page

.scrollactive-nav.show-lg-up.multi-menu(class=headerHome ? 'scrollnav' : '')
  ul.main-menu
    each item in menu.starter
      |
      |
      li
        |
        |
        a.btn.btn-flat.anchor-link.waves-effect(
          href=headerHome ? '#'+item.name : link.starter.home+'#'+item.name
        ) #{$t.starter['header_' + item.name]}
        |
        |
    |
    |
    li
      |
      |
      button.btn.btn-flat.megamenu-trigger-click.waves-effect(data-target='sample-page')
        |
        | #{$t.common.header_sample_page}
        |
        i.material-icons.right.icon keyboard_arrow_down
        |
        |
      |
      |
      .mega-menu-root.dropdown-content(id='sample-page')
        .mega-menu
          .container.max-md
            .row
              each subitem in sample
                .col-sm-3.mb-6
                  .title-mega #{subitem.name}
                  |
                  |
                  img.thumb-menu(src=subitem.thumb alt="thumbnail")/
                  |
                  |
                  ul
                    each childitem in subitem.child
                      li.waves-effect
                        a.menu-list(href=childitem.link class=childitem.name === pageName ? 'current' : '')
                          | #{$t.common['header_' + childitem.name]}
      
    |
    |
    